{{template "base" .}}
{{define "title"}}Home{{end}}
{{define "main"}}
<h2>Latest News</h2>
{{if .NewsList}}
<table>
    <tr>
        <th>Title</th>
        <th>Created</th>
        <th>ID</th>
    </tr>
    {{range .NewsList}}
    <tr>
        <td><a href='/news?id={{.ID}}'>{{.Title}}</a></td>
        <td>{{.Created}}</td>
        <td>#{{.ID}}</td>
    </tr>
    {{end}}
</table>
{{else}}
<p>There's nothing to see here... yet!</p>
{{end}}
{{end}}
